<div class= "login-form">
  <%= nested_form_for(@product) do |f| %>
    <% if @product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class:"form-control", placeholder: "product title" %>
    </div>

    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: "3", class:"form-control", placeholder: "description"%>
    </div>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class:"form-control", placeholder: "price" %>
    </div>

    <div class="form-group">
      <%= f.fields_for :attachments do |photo_form| %>
        <%= photo_form.file_field :photo %>
        <%= photo_form.link_to_remove "Remove this attachment" %>
      <% end %>
      <p>
        <%= f.link_to_add "Add an attachment", :attachments %>
      </p>
    </div>

    <div class="actions">
      <%= f.submit class: "btn btn-success"%>
    </div>
  <% end %>
</div>
