<div class="row">
  <h1><%= display_name(@user) %></h1>
  <%= image_tag(@user.attachment.photo.url(:small)) %>
  <div><%= @user.email %></div>
</div>

<div class="row">
  <%= paginate @products %>

  <% @products.each do |product| %>
    <h1><%= link_to product.title, product %></h1>
    <em><%= product.body %></em>
    <div><%= link_to 'Goto Product', product, class: "btn btn-info btn-sm" %></div>
  <% end %>
</div>
