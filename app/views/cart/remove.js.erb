$('#remove-row-<%= @id %>').hide();
$('#cart-count').text('<%= @cart_count %>');
<% if @discounted_sum.present? %>
  $('#sum').text("").append("<del><%= append_currency(@sum) %></del>");
  $('#discounted-price-row').show();
  $('#discounted-sum').text('<%= append_currency(@discounted_sum) %>');
<% else %>
  $('#sum').text("").append('<strong><%= append_currency(@sum) %></strong>');
  $('#discounted-price-row').hide();
<% end %>
